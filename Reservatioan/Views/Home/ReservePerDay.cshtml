@model IEnumerable<Reservatioan.Models.Tray>  
@{
    ViewBag.Title = "ReservePerDay";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>ReservePerDay</h2>




<div class="row">
    <div class="col-md-6 text-center">
        <a href="#">
            <h2>@Model.ElementAt(0).Name</h2>
            @{var base64 = Convert.ToBase64String(@Model.ElementAt(0).Image);
                var imgSrc = String.Format("data:image/gif;base64,{0}", base64);
                <img src="@imgSrc" style="width: 200px; height: 200px;"/>
            }
        </a>
    </div>
    <div class="col-md-6 text-center">
        <a href="#">
            <h1>@Model.ElementAt(1).Name</h1>
            @{
                base64 = Convert.ToBase64String(@Model.ElementAt(1).Image);
                imgSrc = String.Format("data:image/gif;base64,{0}", base64);
                <img src="@imgSrc" style="width: 200px; height: 200px;" />
            }
        </a>
    </div>
    <div class="row" >
        <div class="col-md-6 col-md-offset-3 text-center"style="padding-top: 50px;">
            <a href="#">
                <h3>@Model.ElementAt(2).Name</h3>
                @{
                    base64 = Convert.ToBase64String(@Model.ElementAt(2).Image);
                    imgSrc = String.Format("data:image/gif;base64,{0}", base64);
                    <img src="@imgSrc" style="width: 200px; height: 200px;" />
                }
            </a>
        </div>
    </div>
   
